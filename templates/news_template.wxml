<template name="top_news">

  <block wx:for="{{array}}" wx:key="">
    <view class="item" bindtap="seeDetail" id="0">
      <view>
        <image src="{{item.img}}" style="width:75px;height:58px;"></image>
      </view>
      <view class="desc">
        <view class="title">{{item.title}}</view>
        <view class="count">
          <view>{{item.type}}</view>
          <view class="browse">{{item.browse}}</view>
          <view class="commit">{{item.commit}}</view>
        </view>
      </view>
    </view>
    <view class="hr2"></view>
  </block>

</template>